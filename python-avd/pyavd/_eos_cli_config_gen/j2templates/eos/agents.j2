{# eos - agents #}
{% for agent in agents | arista.avd.natural_sort('name') %}
{%     if loop.first %}
!
{%     endif %}
{%     if agent.environment_variables is arista.avd.defined %}
{%         set env_list = [] %}
{%         for envvar in agent.environment_variables %}
{%             do env_list.append(envvar.name ~ "=" ~ envvar.value) %}
{%         endfor %}
agent {{ agent.name }} environment {{ env_list | join(":") }}
{%     endif %}
{%     if agent.shutdown is arista.avd.defined(true) %}
agent {{ agent.name }} shutdown
{%     endif %}
{%     if agent.shutdown_supervisor_active is arista.avd.defined(true) %}
agent {{ agent.name }} shutdown supervisor active
{%     endif %}
{%     if agent.shutdown_supervisor_standby is arista.avd.defined(true) %}
agent {{ agent.name }} shutdown supervisor standby
{%     endif %}
{% endfor %}
